<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity"
        android:id="@+id/mainLayout">

        <LinearLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/citySearch"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Search"
                android:drawableStart="@drawable/ic_round_search_24"
                android:drawablePadding="20dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:drawableTint="@color/black"
                android:background="@drawable/rounded_search"
                android:layout_margin="10dp"></EditText>

            <ImageView
                android:id="@+id/currentLocation"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Current Location"
                android:focusable="true"
                android:src="@drawable/ic_baseline_my_location_24"></ImageView>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/minTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min Temp"
                        android:layout_marginEnd="25dp"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:id="@+id/maxTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max Temp"
                        android:layout_marginStart="25dp"
                        android:textColor="@color/white"></TextView>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="25dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12Â°C"
                            android:textSize="85sp"
                            android:textColor="@color/white"></TextView>

                        <TextView
                            android:id="@+id/feelsLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feels Like"
                            android:layout_margin="5dp"
                            android:textColor="@color/white"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical"
                        android:layout_marginEnd="25dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/weatherImg"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_launcher_foreground"
                            android:scaleType="fitXY"></ImageView>

                        <TextView
                            android:id="@+id/weatherTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Weather"
                            android:textColor="@color/white"></TextView>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"
                    app:cardCornerRadius="25dp">

                    <LinearLayout
                        android:id="@+id/optionsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:id="@+id/pressureLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/pressureImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/pressure"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/pressureValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Pressure"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/humidityLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/humidityImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/humidity"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/humidityValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Humidity"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/windLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/windImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/wind"
                                    app:tint="@color/white"
                                    tools:ignore="DuplicateIds"></ImageView>

                                <TextView
                                    android:id="@+id/windValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Wind"></TextView>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:id="@+id/sunriseLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/sunriseImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/sunrise"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/sunriseValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Sunrise"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sunsetLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/sunsetImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/sunset"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/sunsetValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Sunset"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tempFLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/tempFImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/temperature"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/tempFValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Â°F"></TextView>


                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:weightSum="3">

                            <LinearLayout
                                android:id="@+id/groundLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/groundImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/ground_level"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/groundValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Ground"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/seaLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/seaImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/water"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/seaValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Sea"></TextView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/countryLayout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/countryImg"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:layout_margin="2dp"
                                    android:src="@drawable/country"
                                    app:tint="@color/white"></ImageView>

                                <TextView
                                    android:id="@+id/countryValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    android:text="100"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:textSize="20sp"></TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Country"></TextView>


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

        </ProgressBar>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>